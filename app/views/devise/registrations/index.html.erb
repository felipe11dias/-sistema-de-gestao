<h1>Users administration</h1>

<table>
  <thead>
    <tr>
      <th>Nome do usuário</th>
      <th>Nome</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user , class: 'badge badge-primary' %></td>
        <td><%= link_to 'Edit', edit_user_registration(user) , class: 'badge badge-warning' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Tem certeza?' } , class: 'badge badge-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
